<script>
  function sendOTPCode() {
    var numberField = document.getElementById('phone_number_number');
    fetch(`/phone_numbers/validate_number?phone_number=${numberField.value}`);
  }
</script>
<%= form_with(model: phone_number) do |form| %>
  <% if phone_number.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(phone_number.errors.count, "error") %> prohibited this phone_number from being saved:</h2>

      <ul>
        <% phone_number.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select 'phone_type', PhoneNumber::VALID_TYPES, {} %>
  </div>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code %>
  </div>

  <div>
    <input type='button' value='Send Verification Code' onClick='sendOTPCode();' />
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
